<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/card_layout_margin"
    android:layout_marginTop="@dimen/card_layout_margin"
    android:layout_marginRight="@dimen/card_layout_margin"
    android:layout_marginBottom="@dimen/card_layout_margin"
    android:background="@color/colorCardBackground"
    android:orientation="vertical">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/category_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pic_height"
        android:layout_marginLeft="@dimen/pic_layout_margin_horizontal"
        android:layout_marginTop="@dimen/pic_layout_margin_top"
        android:layout_marginRight="@dimen/pic_layout_margin_horizontal"
        android:layout_marginBottom="@dimen/pic_layout_margin_bottom"
        android:adjustViewBounds="true"
        android:contentDescription="@string/category_image"
        android:scaleType="center"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/ColorCategoryText"
        android:textSize="@dimen/category_text_size"
        tools:text="Категория" />
</LinearLayout>

