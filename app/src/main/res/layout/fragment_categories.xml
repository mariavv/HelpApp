<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/main_bottom_bar_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/recycler_categories_frame"
    android:paddingRight="@dimen/recycler_categories_frame"
    tools:context=".ui.categories.CategoriesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/categories_head_height"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/categories_head_text"
        android:textColor="@color/colorCategoriesHeadText"
        android:textSize="@dimen/categories_head_text_size"
        android:textStyle="normal" />

    <!--<ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/progressBar_size"
        android:layout_height="@dimen/progressBar_size"
        android:layout_gravity="center_horizontal"
        android:elevation="5dp"
        android:visibility="gone"
        tools:visibility="visible" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/scrollbarSize"
        android:scrollbarTrackVertical="@android:color/white"
        android:scrollbars="vertical"
        tools:listitem="@layout/category_item" />
</LinearLayout>

