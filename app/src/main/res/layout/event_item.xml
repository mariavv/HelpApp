<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/event_containier_padding"
    android:layout_marginTop="@dimen/event_containier_padding"
    android:layout_marginRight="@dimen/event_containier_padding"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/event_pic_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/event_pic_layout_margin"
        android:layout_marginTop="@dimen/event_pic_layout_margin"
        android:layout_marginRight="@dimen/event_pic_layout_margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/category_image"
        android:scaleType="center"
        tools:src="@drawable/img" />

    <TextView
        android:id="@+id/event_name"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        tools:text="Благотворительное событие" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/galochka"
        android:paddingTop="@dimen/events_galochka_padding_top"
        android:paddingBottom="@dimen/events_galochka_padding_bottom"
        android:src="@drawable/decor" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/event_description_padding_horizontal"
        android:paddingRight="@dimen/event_description_padding_horizontal"
        android:textAlignment="center"
        tools:text="Дубовская школа-интернат для детей  с ограниченными возможностями здоровья стала первой в области …" />


    <TextView
        android:id="@+id/event_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_date_height"
        android:layout_marginTop="@dimen/event_date_margin_top"
        android:background="@color/colorEventDate"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/line_spacing_extra"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/event_date_text_size"
        android:textStyle="normal"
        tools:text="Осталось 13 дней (21.09 – 20.10)" />

</LinearLayout>
